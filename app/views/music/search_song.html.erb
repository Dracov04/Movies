<div class= 'movie_show_items'>
	<% if @songs == [] %>
		Sorry, there isnÂ´t any song with this title.
	<% else %>
		<h1>Songs</h1>
		<% @songs.each do |song| %>
			<%if song.artist == nil %>
				
			<% else %>
				<h2><%= song.title %></h2>
				<p>Artist: <%= link_to(song.artist.name, artist_path(song.artist)) %></p>
				<br>
				<p>Categories: <% song.artist.tags[0..song.artist.tags.length - 2].each do |tag| %>
					<%= link_to(tag.name, tag_path(tag)) %>, 
				<% end %>
				<%= link_to(song.artist.tags.last.name, tag_path(song.artist.tags.last)) %>.
				</p>
				<br>
				<p>Number of listeners: <%= song.listeners %></p>
				<br>
			<% end %>
		<% end %>
	<% end %>
</div>