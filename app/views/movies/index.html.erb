<h1>INDEX</h1>

<%= form_tag(search_movies_path, method: :get) do %>
<%= text_field_tag('title') %>
<%= submit_tag('Search') %>
<% end %>

<form accept-charset="UTF-8" action="/movies/search_category" method="get"><div style="display:none"><input name="utf8" type="hidden" value="âœ“"></div>

<%  Category.all.each do |category| %>
    <%= check_box_tag 'category[]', category.name %> <%= category.name %> <br/>
<% end %>

<input name="commit" type="submit" value="Search">
</form>

<ul>	<% @movies.each do |a| %>
	<li>
		<%= link_to(a.title, movie_path(a.id)) %> -ID: <%= a.id %> -View: <%= a.counter %>
		<p><%= link_to("View +1", increment_counter_movie_path(a), method: :patch) %></p>
		<p><%= link_to("View -1", reduce_counter_movie_path(a), method: :patch) %></p>
		<%if a.poster? %>
			<br><%= link_to(image_tag(a.poster), movie_path(a)) %></br>
		<%else%>
		<br><img src="http://www.alpharoto.com/images/image_not_found.jpg"/></br>
		<%end%>
	</li>
	<p><%= link_to("Edit", edit_movie_path(a)) %></p>
	<p><%= link_to("Delete",  movie_path(a), method: :delete, data:{confirm: "Are you sure?"}) %></p>
	<%end%>
</ul>

<p><%= paginate @movies %></p>




