<!DOCTYPE html>
<html>
<head>
  <title>MoviesRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
		<nav class="top-bar" data-topbar>
			<ul class="title-area">
	    		<li class="name">
	    			<h1><%= link_to('What Can I Do', root_path) %></h1>
	    		</li>
	<!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
	    		<li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
			</ul>
			
			<section class="top-bar-section">
	<!-- Left Nav Section -->
		    	<ul class="left">
	    			<li class="divider"></li>
		    		<li class="has-dropdown not-click">
		    			<a>Movies</a>
		        		<ul class="dropdown">
		        			<li class="divider"></li>		        				
        					<li><%= link_to("Movie list", movies_path) %></li>
        					<li class="divider"></li>
        					<li><%= link_to("Actors list", cast_members_path) %></li>
        					<li class="divider"></li>
        					<li><%= link_to("Category list", categories_path) %></li>        			
		        		</ul>
		    		</li>
		    	</ul>
		    	<ul class="left show-for-small-up">
		    		<li class="divider"></li>
		    		<li><%= link_to("Music", music_index_path) %></li>
		    		<li class="divider"></li>
		    	</ul>


	<!-- Right Nav Section -->
		    	<ul class="right">
		    		
		    	</ul>
			</section>
		</nav>

	<article>
		<%= yield %>
	</article>
	<footer class='text-center' >
		<p>Ironhack Project | What Can I Do & Co.</p>
	</footer>
	<script>$(document).foundation();</script>
</body>
</html>